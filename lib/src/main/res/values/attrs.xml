<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EasyRecyclerView">
        <attr name="plus_layout_empty" format="reference" />
        <attr name="plus_layout_progress" format="reference" />
        <attr name="plus_layout_error" format="reference" />
        <attr name="plus_recyclerClipToPadding" format="boolean" />
        <attr name="plus_recyclerPadding" format="dimension" />
        <attr name="plus_recyclerPaddingTop" format="dimension" />
        <attr name="plus_recyclerPaddingBottom" format="dimension" />
        <attr name="plus_recyclerPaddingLeft" format="dimension" />
        <attr name="plus_recyclerPaddingRight" format="dimension" />
        <attr name="plus_scrollbarStyle">
            <enum name="insideOverlay" value="0x0" />
            <enum name="insideInset" value="0x01000000" />
            <enum name="outsideOverlay" value="0x02000000" />
            <enum name="outsideInset" value="0x03000000" />
        </attr>
        <attr name="plus_scrollbars">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="0"/>
            <enum name="none" value="2"/>
        </attr>
    </declare-styleable>


</resources>
